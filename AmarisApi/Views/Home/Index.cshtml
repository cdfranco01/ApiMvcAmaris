@model List<Employee>

<div class="container mt-4">
    <div class="row">
        <!-- Sección de búsqueda -->
        <div class="col-md-6">
            <h2 class="text-primary">Lista de Empleados</h2>
            <div class="input-group mb-3">
                <input type="text" id="employeeId" class="form-control" placeholder="Ingrese ID de empleado (opcional)">
                <button class="btn btn-primary" onclick="searchEmployee()">Buscar</button>
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
        </div>
    </div>

    <!-- Tabla de empleados -->
    <div class="table-responsive mt-4">
        <table class="table table-hover table-striped border shadow">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Salario Mensual</th>
                    <th>Edad</th>
                    <th>Imagen</th>
                    <th>Salario Anual</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>@emp.Id</td>
                        <td>@emp.employee_name</td>
                        <td>@emp.employee_salary</td>
                        <td>@emp.employee_age</td>
                        <td>@emp.profile_image</td>
                        <td>@emp.AnnualSalary</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    // function searchEmployee() {
    //     var id = document.getElementById("employeeId").value;
    //     window.location.href = "/Home/Index/" + id;
    // }
  
    function searchEmployee() {
        var id = document.getElementById("employeeId").value.trim();

        if (id === "") {
            // Si el campo está vacío, recarga la página para mostrar todos los empleados
            window.location.href = "/Home/Index";
        } else {
            // Si hay un ID, filtra el empleado específico
            window.location.href = "/Home/Index/" + id;
        }
    }
</script>
